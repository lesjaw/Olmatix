<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:theme="@style/Theme.AppCompat.Light.DarkActionBar">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="100sp"
                android:layout_height="100sp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/icon_stat"
                    android:background="@color/grey"
                    android:visibility="gone"
                    />

                <ImageButton
                    android:id="@+id/icon_node_button"
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:padding="0sp"
                    android:src="@drawable/offsec"
                    android:elevation="0sp"
                    android:stateListAnimator="@null"
                    android:theme="@style/AppTheme.Button"/>

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:id="@+id/icon_conn"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_check_red"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="30sp"
                    android:foregroundGravity="top"/>

                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:id="@+id/icon_node"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/door_close"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="30sp"
                    android:foregroundGravity="top"
                    android:layout_marginRight="5sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/node_name"
                    android:text="Name Sensor"
                    android:textSize="15dp"
                    android:layout_marginTop="5sp"
                    android:layout_below="@+id/icon_node_button"
                    android:layout_centerInParent="true"
                    android:textAlignment="center"
                    android:maxLines="1"
                    android:gravity="center"/>


            </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>