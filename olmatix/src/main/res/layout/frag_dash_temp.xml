<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="0sp">


    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="100sp"
            android:layout_height="100sp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/icon_stat"
                android:background="@color/grey"
                android:visibility="gone"
                />

            <ImageButton
                android:id="@+id/icon_node"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:src="@drawable/offlamp1"
                android:stateListAnimator="@null"
                android:theme="@style/AppTheme.Button"/>

            <ImageView
                android:id="@+id/icon_conn"
                android:layout_width="10sp"
                android:layout_height="10sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="30sp"
                android:foregroundGravity="top"
                android:scaleType="fitXY"
                android:padding="2sp"
                android:src="@drawable/off_indicator"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/node_name"
                android:text="Name Sensor"
                android:textSize="15dp"
                android:layout_marginTop="5sp"
                android:maxLines="1"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/temp"
                android:text="30 C"
                android:textSize="15dp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="57sp"
                android:layout_alignParentRight="true"
                android:maxLines="1"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hum"
                android:text="50%"
                android:textSize="15dp"
                android:layout_marginTop="40sp"
                android:layout_marginRight="5sp"
                android:layout_alignParentRight="true"
                android:maxLines="1"
                android:textAlignment="center" />

            <ProgressBar
                android:id="@+id/pbProcessing"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="91dp"
                android:layout_height="4dp"
                android:layout_below="@+id/icon_stat"
                android:layout_centerHorizontal="true"
                android:indeterminateOnly="true"
                android:padding="0sp"
                android:visibility="gone"/>

            <com.github.ybq.android.spinkit.SpinKitView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/spin_kit"
                style="@style/SpinKitView.ChasingDots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:SpinKit_Color="@color/colorAccent"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>