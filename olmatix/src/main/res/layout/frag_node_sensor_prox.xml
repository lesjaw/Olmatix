<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:theme="@style/Theme.AppCompat.Light.DarkActionBar">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:id="@+id/icon_node"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:fitsSystemWindows="true"
                android:src="@mipmap/olmatixlogo"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/node_name"
                android:layout_toRightOf="@+id/icon_node"
                android:layout_alignParentTop="true"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Node Name"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sensorstatus"
                android:textSize="16sp"
                android:text="Sensor Status"
                android:layout_below="@+id/node_name"
                android:layout_toRightOf="@+id/icon_node"
                android:layout_toEndOf="@+id/icon_node"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/statuslabel"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/icon_node"
                android:layout_below="@+id/sensorstatus"
                android:text="Status: "
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/status"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="5sp"
                android:paddingLeft="5sp"
                android:layout_toRightOf="@+id/statuslabel"
                android:layout_below="@+id/sensorstatus"
                android:text="NOT ARMED"
                android:background="@drawable/border"
                />

            <Button
                android:id="@+id/btn_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15sp"
                android:text="OFF"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/status"
                android:textStyle="bold"
                android:textSize="20sp"
                android:theme="@style/AppTheme.Button_off" />

            <Button
                android:id="@+id/btn_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15sp"
                android:layout_below="@id/status"
                android:layout_toLeftOf="@id/btn_off"
                android:text="ON"
                android:textStyle="bold"
                android:textSize="20sp"
                android:theme="@style/AppTheme.Button_on"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/set_range_label"
                android:textSize="20sp"
                android:text="Set distance detection :"
                android:layout_marginTop="10sp"
                android:layout_below="@id/btn_on"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/set_range_text"
                android:textSize="20sp"
                android:text="6 M"
                android:layout_marginTop="10sp"
                android:layout_below="@id/btn_on"
                android:layout_toRightOf="@+id/set_range_label"
                android:paddingLeft="10sp"
                android:gravity="center"/>

            <android.support.v7.widget.AppCompatSeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seek_range"
                android:layout_below="@id/set_range_label"
                android:layout_marginTop="10sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/jarak"
                android:textSize="25sp"
                android:text="2 meter"
                android:layout_marginTop="355sp"
                android:gravity="center"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/door"
                android:fitsSystemWindows="true"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/seek_range"
                android:src="@drawable/proximityon"
                android:paddingTop="15sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fw_name"
                android:textSize="10sp"
                android:text="fw Name"
                android:paddingTop="5sp"
                android:layout_marginLeft="20sp"
                android:layout_below="@+id/icon_node"
                 />

            <ImageButton
                android:id="@+id/opt"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/jarak"
                android:src="@android:drawable/ic_menu_view"
                android:stateListAnimator="@null"
                android:theme="@style/AppTheme.Button"
                android:scaleType="fitXY"
                />

            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/expandable_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                app:el_duration="300"
                app:el_expanded="true"
                android:layout_below="@id/opt">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/chartLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="See Chart"
                        android:textColor="@color/white"
                        android:theme="@style/AppTheme.Button"/>

                    <TextView
                        android:id="@+id/lastdata"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/chartLabel"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="Last action"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/API1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/chartLabel"
                        android:elevation="4dp"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="API ON/OFF"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/API2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/API1"
                        android:elevation="4dp"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="API Status"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/labelapi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/API2"
                        android:elevation="4dp"
                        android:gravity="left"
                        android:layout_marginTop="10sp"
                        android:padding="5dp"
                        android:text="Click those API above to copy or share"
                        android:textColor="@color/white" />

                </RelativeLayout>

            </net.cachapa.expandablelayout.ExpandableLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>