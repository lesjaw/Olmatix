<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        android:clickable="true"
        android:background="?android:selectableItemBackground"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/rvbut"
                android:layout_width="300sp"
                android:layout_height="90sp"
                android:stateListAnimator="@null"
                android:background="@color/white"
                />

            <ImageView
                android:id="@+id/icon_node"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:fitsSystemWindows="true"
                android:src="@mipmap/olmatixlogo" />

            <ImageView
                android:id="@+id/icon_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="0sp"
                android:src="@drawable/ic_check_red" />

            <TextView
                android:id="@+id/fw_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/icon_node"
                android:text="Node Name"
                android:textSize="19sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/ipaddrs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fw_name"
                android:layout_toRightOf="@+id/icon_node"
                android:text="@string/ipaddrs" />

            <TextView
                android:id="@+id/signal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ipaddrs"
                android:layout_toRightOf="@+id/icon_node"
                android:text="@string/signal" />

            <TextView
                android:id="@+id/latestAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signal"
                android:layout_toRightOf="@+id/icon_node"
                android:text="@string/latestAdding" />

            <TextView
                android:id="@+id/uptime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/icon_status"
                android:paddingTop="0sp"
                android:text="Uptime" />

            <TextView
                android:id="@+id/nodeid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/uptime"
                android:paddingTop="0sp"
                android:text="nodeID"
                android:maxLength="10"/>

            <ImageButton
                android:id="@+id/opt"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/nodeid"
                android:src="@android:drawable/ic_menu_view"
                android:stateListAnimator="@null"
                android:theme="@style/AppTheme.Button"
                android:scaleType="fitXY"
                />

            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/expandable_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                app:el_duration="300"
                app:el_expanded="false"
                android:layout_below="@id/opt">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/reset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="Reset"
                        android:textColor="@color/white"
                        android:theme="@style/AppTheme.Button"/>

                <TextView
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Delete"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/rename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:gravity="right"
                    android:padding="16dp"
                    android:text="Rename"
                    android:textColor="@color/white"
                    android:layout_weight="1"/>
                </LinearLayout>

            </net.cachapa.expandablelayout.ExpandableLayout>


        </RelativeLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>